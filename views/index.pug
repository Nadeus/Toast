extends layout
block content
  if locals.flash && locals.flash.error
    div(class="ui negative message")= locals.flash.error
  else if locals.flash && locals.flash.success
    div(class="ui positive message")= locals.flash.success
  else 
    break

  form(action="/", method="post", class="ui form")
    .field
      label(for="message") Message
      textarea(name="Message")
    button(type="submit", class="ui blue labeled submit icon button") Envoyer
      i(class="icon edit")
    div(class="ui comments")
      h3(class="ui dividing header") Commentaires
      each message in messages
        .comment
          a(class="avatar" href="/message/" + message.id)
            img(src="https://image.jeuxvideo.com/avatar-md/f/i/finalwar-1532550416-ca859331e534d1efdf5435ce00fc6f84.jpg")
          .content
            .metadata
              .pseudo= message.auteur
              .date= message.created_at
            .text=message.content

